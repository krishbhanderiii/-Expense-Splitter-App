<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="350dp"
    android:background="@color/white"
    app:cardCornerRadius="25dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#F8F8F8"
        android:padding="24dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="275dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gilroumed"
            android:text="@string/add_expence"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/TITLE_DISCRIPSION"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="4dp"
            android:background="#D3D3D5"
            android:fontFamily="@font/gilroumed"
            android:hint="@string/ex_food"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.465" />

        <Spinner
            android:id="@+id/Spinner"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="#D3D3D5"
            android:textColor="#FDFCFC"
            android:fontFamily="@font/gilroumed"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/COSTS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.988"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.74" />

        <EditText
            android:id="@+id/COSTS"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="20dp"
            android:background="#D3D3D5"
            android:fontFamily="@font/gilroumed"
            android:hint="@string/enter_rupee"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/NEXT_STEP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="Autofill">

        </EditText>

        <Button
            android:id="@+id/NEXT_STEP"
            android:layout_width="112dp"
            android:layout_height="46dp"
            android:layout_below="@id/Spinner"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#0077F9"
            android:fontFamily="@font/gilroumed"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.546"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/gilroumed"
            android:text="@string/person_who_pay_the_costs"
            android:textAllCaps="true"
            android:textColor="#B0000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/COSTS"
            app:layout_constraintEnd_toStartOf="@+id/Spinner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EXPENCE" />

        <TextView
            android:id="@+id/EXPENCE"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gilroumed"
            android:text="@string/title"
            android:textAllCaps="true"
            android:textColor="#B0000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/TITLE_DISCRIPSION"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>




